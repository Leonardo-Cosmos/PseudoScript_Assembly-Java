<selenium>
	<webDrivers>
		<!-- Chrome OS Expected Location of Chrome Linux /usr/bin/google-chrome 
			Mac /Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome Windows 
			XP %HOMEPATH%\Local Settings\Application Data\Google\Chrome\Application\chrome.exe 
			Windows Vista C:\Users\%USERNAME%\AppData\Local\Google\Chrome\Application\chrome.exe 
			For Linux systems, the ChromeDriver expects /usr/bin/google-chrome to be 
			a symlink to the actual Chrome binary. -->
		<webDriver browser="Chrome"	path="/Users/Leonardo/Documents/Selenium/chromedriver" />
		<webDriver browser="FireFox" path="" />
		<webDriver browser="IE"	path="C:\Software\Selenium\IEDriverServer.exe" />
	</webDrivers>

	<option>
		<implicitlyWait>30</implicitlyWait>
		<pageLoadTimeout>10</pageLoadTimeout>
	</option>
</selenium> 
